<idea-plugin>
    <id>io.temporal.intellij</id>
    <name>Temporal</name>
    <vendor email="support@temporal.io" url="https://temporal.io">Temporal Technologies</vendor>

    <description><![CDATA[
    Temporal plugin for JetBrains IDEs.

    <h2>Features</h2>
    <ul>
        <li>Hello World action to verify plugin installation</li>
    </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Temporal"
                    anchor="right"
                    factoryClass="io.temporal.intellij.toolwindow.TemporalToolWindowFactory"
                    icon="/icons/temporal_13.png"/>
        <projectConfigurable
                parentId="tools"
                instance="io.temporal.intellij.settings.TemporalSettingsConfigurable"
                id="io.temporal.intellij.settings"
                displayName="Temporal"
                nonDefaultProject="true"/>
    </extensions>

    <actions>
        <group id="Temporal.ToolsMenu" text="Temporal" description="Temporal tools" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="Temporal.HelloWorld"
                    class="io.temporal.intellij.HelloWorldAction"
                    text="Hello World"
                    icon="/icons/temporal_16.png"
                    description="Say hello from Temporal plugin"/>
        </group>
    </actions>
</idea-plugin>
